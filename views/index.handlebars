<h1 style="text-align: center">Eat-a-Burger!</h1>
<img src="assets/img/burgertime.jpg" height="300px">
<div class=container>

<div style="width:50%; float: left">
<h2>Burgers I have yet to eat:</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

</div>
<div style="width:50%, float: right">
<h2>Burgers I have eaten:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>


</div>
</div>

<div style="padding-top: 100px">
<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Have you eaten this burger?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten!<br>
    <input type="radio" name="devoured" value="0"> Uneaten!
  </div>

  <button type="submit">Add burger</button>
</form>
</div>

